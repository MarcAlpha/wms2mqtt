{
  "name": "Warema WMS Bridge",
  "version": "1.0.0",
  "slug": "wms2mqtt",
  "description": "Bridge for Warema WMS USB Stick with MQTT Discovery",
  "arch": ["armv7", "aarch64", "amd64"],
  "startup": "services",
  "boot": "auto",
  "services": ["mqtt"],
  "devices": [
    "/dev/ttyUSB0",
    "/dev/ttyUSB1",
    "/dev/ttyACM0"
  ],
  "options": {
    "wms_channel": 17,
    "wms_key": "00112233445566778899AABBCCDDEEFF",
    "wms_pan_id": "FFFF",
    "wms_serial_port": "/dev/ttyUSB0",
    "polling_interval": 30000,
    "moving_interval": 1000,
    "ignored_devices": ""
  },
  "schema": {
    "wms_channel": "int",
    "wms_key": "str",
    "wms_pan_id": "str",
    "wms_serial_port": "device(filter=ttyUSB|ttyACM|serial)",
    "polling_interval": "int",
    "moving_interval": "int",
    "ignored_devices": "str?"
  }
}
