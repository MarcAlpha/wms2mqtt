{
  "name": "Warema Bridge",
  "version": "1.0.0",
  "slug": "wms2mqtt",
  "description": "Control your Warema WMS system",
  "arch": ["aarch64", "amd64", "armv7", "i386"],
  "startup": "services",
  "boot": "auto",
  "hassio_api": true,
  "privileged": ["SYS_RAWIO"],
  "devices": ["/dev/ttyUSB0:/dev/ttyUSB0"],
  "options": {
    "wms_serial_port": "/dev/ttyUSB0",
    "wms_channel": 17
  },
  "schema": {
    "wms_key": "str?",
    "wms_pan_id": "str?",
    "wms_channel": "int?",
    "wms_serial_port": "str",
    "polling_interval": "int?",
    "moving_interval": "int?", 
    "ignored_devices": "str?",
    "force_devices": "str?"
  },
  "services": [
    "mqtt:need"
  ]
}
